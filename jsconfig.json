{
	"compilerOptions": {
		"types": ["vite/client"],
		"checkJs": true,
		"moduleResolution": "bundler",
		"target": "ES2022",
		"module": "esnext",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["./src/assets/styles/*"],
			"@components/*": ["./src/components/*"],
			"@stores/*": ["./src/stores/*"],
			"@views/*": ["./src/views/*"],
			"@utils/*": ["./src/utils/*"],
			"@WebglApp/*": ["./src/WebglApp/*"],
			"@Game/*": ["./src/Game/*"],
			"@Server/*": ["./src/Server/*"],
			"@Core/*": ["./src/WebglApp/Core/*"],
			"@Debug/*": ["./src/WebglApp/Debug/*"],
			"@Tools/*": ["./src/WebglApp/Tools/*"],
			"@Webgl/*": ["./src/WebglApp/Webgl/*"],
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist/**/*"]
}
