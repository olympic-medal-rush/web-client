{
	"compilerOptions": {
		"types": ["vite/client", "vite-plugin-pwa/client"],
		"checkJs": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"target": "ES2022",
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["./src/assets/styles/*"],
			"@jsons/*": ["./src/assets/jsons/*"],
			"@components/*": ["./src/components/*"],
			"@stores/*": ["./src/stores/*"],
			"@views/*": ["./src/views/*"],
			"@utils/*": ["./src/utils/*"],
			"@webglApp/*": ["./src/webglApp/*"],
			"@game/*": ["./src/game/*"],
			"@server/*": ["./src/server/*"],
			"@Core/*": ["./src/webglApp/Core/*"],
			"@Debug/*": ["./src/webglApp/Debug/*"],
			"@Tools/*": ["./src/webglApp/Tools/*"],
			"@Webgl/*": ["./src/webglApp/Webgl/*"],
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist/**/*"]
}
