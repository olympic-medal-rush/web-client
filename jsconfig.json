{
	"compilerOptions": {
		"types": ["vite/client", "vite-plugin-pwa/client"],
		"checkJs": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"target": "ES2022",
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/Vue/components/*"],
			"@stores/*": ["./src/Vue/stores/*"],
			"@views/*": ["./src/Vue/views/*"],

			"@styles/*": ["./src/assets/styles/*"],
			"@jsons/*": ["./src/assets/jsons/*"],

			"@utils/*": ["./src/utils/*"],

			"@Core/*": ["./src/Core/*"],
			"@Debug/*": ["./src/Debug/*"],
			"@Game/*": ["./src/Game/*"],
			"@Server/*": ["./src/Server/*"],
			"@Sound/*": ["./src/Sound/*"],
			"@Tools/*": ["./src/Tools/*"],
			"@Vue/*": ["./src/Vue/*"],
			"@Webgl/*": ["./src/Webgl/*"],

			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist/**/*"]
}
