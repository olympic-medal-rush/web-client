{
	"compilerOptions": {
		"types": ["vite/client"],
		"checkJs": true,
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"module": "esnext",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["./src/assets/styles/*"],
			"@components/*": ["./src/components/*"],
			"@plugins/*": ["./src/plugins/*"],
			"@stores/*": ["./src/stores/*"],
			"@views/*": ["./src/views/*"],
			"@Core/*": ["src/plugins/WebglApp/Core/*"],
			"@Debug/*": ["src/plugins/WebglApp/Debug/*"],
			"@Tools/*": ["src/plugins/WebglApp/Tools/*"],
			"@Webgl/*": ["src/plugins/WebglApp/Webgl/*"],
			"@utils/*": ["src/plugins/WebglApp/utils/*"]
		}
	},
	"exclude": ["node_modules", "dist/**/*"]
}
