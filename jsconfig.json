{
	"compilerOptions": {
		"types": ["vite/client"],
		"checkJs": true,
		"moduleResolution": "bundler",
		"target": "ES2022",
		"module": "esnext",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["./src/assets/styles/*"],
			"@components/*": ["./src/components/*"],
			"@stores/*": ["./src/stores/*"],
			"@views/*": ["./src/views/*"],
			"@utils/*": ["./src/utils/*"],
			"@WebglApp/*": ["src/webglApp/*"],
			"@Game/*": ["src/game/*"],
			"@Server/*": ["src/server/*"],
			"@Core/*": ["src/webglApp/Core/*"],
			"@Debug/*": ["src/webglApp/Debug/*"],
			"@Tools/*": ["src/webglApp/Tools/*"],
			"@Webgl/*": ["src/webglApp/Webgl/*"],
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist/**/*"]
}
